
@{
    ViewBag.Title = "index";
}

<h2>Sales</h2>
<div style="margin-top: 25px; margin-bottom: 0px; padding-top: 0px; padding-bottom: 20px" class="jumbotron">
    <div style="padding-top: 10px">Quick Search</div>
    <div class="row" style="padding: 10px">
        <div class="col-md-4">
            <input type="text" class="form-control" id="salesSearchBox" placeholder="Enter make, model, or year" style="display: inline">
        </div>
        <div class="col-md-4">
            <div class="col-md-2">Price</div>
            <div class="col-md-5">
                <select id="noMinPriceSales" class="btn btn-default" style="cursor: pointer;">
                    <option selected>No Min</option>
                    <option value="20000">$20,000</option>
                    <option value="50000">$50,000</option>
                    <option value="125000">$125,000</option>
                    <option value="150000">$150,000</option>
                    <option value="200000">$200,000</option>
                    <option value="250000">$250,000</option>
                    <option value="300000">$300,000</option>
                    <option value="350000">$350,000</option>
                </select>
            </div>
            <div class="col-md-5">
                <select id="noMaxPriceSales" class="btn btn-default" style="cursor: pointer;">
                    <option selected>No Max</option>
                    <option value="20000">$20,000</option>
                    <option value="50000">$50,000</option>
                    <option value="125000">$125,000</option>
                    <option value="150000">$150,000</option>
                    <option value="200000">$200,000</option>
                    <option value="250000">$250,000</option>
                    <option value="300000">$300,000</option>
                    <option value="350000">$350,000</option>
                </select>
            </div>
            <div class="col-md-12">
                <button type="button" id="sales-search-button" class="btn btn-primary" style="cursor: pointer; margin: auto; width: 100%; display: block; margin-top: 60px;">Search</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-2">Year</div>
            <div class="col-md-5">
                <select id="noMinYearSales" class="btn btn-default" style="cursor: pointer;">
                    <option selected>No Min</option>
                    <option value="2000">2000</option>
                    <option value="2005">2005</option>
                    <option value="2010">2010</option>
                    <option value="2015">2015</option>
                    <option value="2020">2020</option>
                    <option value="2025">2025</option>
                </select>
            </div>
            <div class="col-md-5">
                <select id="noMaxYearSales" class="btn btn-default" style="cursor: pointer;">
                    <option selected>No Max</option>
                    <option value="2000">2000</option>
                    <option value="2005">2005</option>
                    <option value="2010">2010</option>
                    <option value="2015">2015</option>
                    <option value="2020">2020</option>
                    <option value="2025">2025</option>
                </select>
            </div>
        </div>
    </div>
</div>

<div id="salesSearchDiv" style="display: none; margin-top: 15px">


</div>